@model IEnumerable<School_D.Models.Subject>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Number Of Subjects
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @item.StudentSubject.Count
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdSubject">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdSubject">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdSubject">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
